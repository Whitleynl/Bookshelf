        <ListView fx:id="bookListView" onMouseClicked="#handleBookSelectedAction" prefHeight="400.0" prefWidth="284.0" style="-fx-border-style: solid; -fx-border-width: 2; -fx-border-color: DAA520;" styleClass="border" />
        <TextArea fx:id="bookDetailsTextArea" prefHeight="306.0" prefWidth="533.0" style="-fx-border-color: DAA520; -fx-border-width: 2; -fx-border-style: solid;" />
    </HBox>
</VBox>
