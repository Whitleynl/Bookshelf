<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="789.0" prefWidth="573.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.app.BookshelfController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label fx:id="welcomeText" text="Welcome to Bookshelf!">
        <font>
            <Font name="Gill Sans" size="20.0" />
        </font></Label>
    <ToolBar prefHeight="40.0" prefWidth="200.0">
        <ComboBox fx:id="sortingComboBox" onAction="#handleSortingAction" prefWidth="89.0" promptText="Sort By" />
        <Button onAction="#handleExitButtonAction" text="EXIT" />
    </ToolBar>
    <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Select book to show details (Author, Publisher, etc...)">
        <font>
            <Font size="14.0" />
        </font>
    </Text>
    <ListView fx:id="bookListView" onMouseClicked="#handleBookSelectedAction" prefWidth="200.0" />
    <TextArea fx:id="bookDetailsTextArea" prefHeight="306.0" prefWidth="533.0" />
</VBox>
